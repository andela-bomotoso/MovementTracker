        <item name="android:actionBarStyle">@style/Widget.Tracker.ActionBar.Solid</item>
        <item name="android:alertDialogTheme">@style/Theme_Tracker_Dialog_Alert</item>
    </style>

    <style name="Theme_Tracker_Dialog_Alert" parent="@style/Theme_Holo_Dialog_Alert">
        <item name="android:windowTitleStyle">@style/DialogWindowTitle.Tracker</item>
        <item name="android:textColorPrimary">@color/border_stroke</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.Tracker.Medium</item>
        <item name="android:borderlessButtonStyle">@style/Widget.Tracker.Button.Borderless</item>
        <item name="android:buttonBarStyle">@style/Tracker.ButtonBar.AlertDialog</item>
    </style>


</resources>